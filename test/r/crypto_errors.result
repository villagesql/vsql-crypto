INSTALL EXTENSION vsql_crypto;
# Test digest with invalid algorithm (returns NULL)
SELECT vsql_crypto.digest('test', 'invalid-algo') IS NULL;
vsql_crypto.digest('test', 'invalid-algo') IS NULL
0
# Test digest with NULL data
SELECT vsql_crypto.digest(NULL, 'sha256') IS NULL;
vsql_crypto.digest(NULL, 'sha256') IS NULL
1
# Test digest with NULL algorithm
SELECT vsql_crypto.digest('test', NULL) IS NULL;
vsql_crypto.digest('test', NULL) IS NULL
1
# Test digest with empty algorithm (returns NULL)
SELECT vsql_crypto.digest('test', '') IS NULL;
vsql_crypto.digest('test', '') IS NULL
0
# Test hmac with invalid algorithm (returns NULL)
SELECT vsql_crypto.hmac('data', 'key', 'invalid-algo') IS NULL;
vsql_crypto.hmac('data', 'key', 'invalid-algo') IS NULL
0
# Test hmac with NULL data
SELECT vsql_crypto.hmac(NULL, 'key', 'sha256') IS NULL;
vsql_crypto.hmac(NULL, 'key', 'sha256') IS NULL
1
# Test hmac with NULL key
SELECT vsql_crypto.hmac('data', NULL, 'sha256') IS NULL;
vsql_crypto.hmac('data', NULL, 'sha256') IS NULL
1
# Test hmac with NULL algorithm
SELECT vsql_crypto.hmac('data', 'key', NULL) IS NULL;
vsql_crypto.hmac('data', 'key', NULL) IS NULL
1
# Test hmac with empty key (should work - HMAC allows empty keys)
SELECT LENGTH(vsql_crypto.hmac('data', '', 'sha256')) > 0;
LENGTH(vsql_crypto.hmac('data', '', 'sha256')) > 0
1
# Test encrypt with invalid algorithm (returns NULL)
SELECT vsql_crypto.encrypt('data', 'key', 'invalid-algo') IS NULL;
vsql_crypto.encrypt('data', 'key', 'invalid-algo') IS NULL
0
# Test encrypt with NULL data
SELECT vsql_crypto.encrypt(NULL, 'key', 'aes') IS NULL;
vsql_crypto.encrypt(NULL, 'key', 'aes') IS NULL
1
# Test encrypt with NULL key
SELECT vsql_crypto.encrypt('data', NULL, 'aes') IS NULL;
vsql_crypto.encrypt('data', NULL, 'aes') IS NULL
1
# Test encrypt with NULL algorithm
SELECT vsql_crypto.encrypt('data', 'key', NULL) IS NULL;
vsql_crypto.encrypt('data', 'key', NULL) IS NULL
1
# Test encrypt with empty key (returns NULL for security)
SELECT vsql_crypto.encrypt('data', '', 'aes') IS NULL;
vsql_crypto.encrypt('data', '', 'aes') IS NULL
0
# Test decrypt with invalid algorithm (returns NULL)
SELECT vsql_crypto.decrypt('data', 'key', 'invalid-algo') IS NULL;
vsql_crypto.decrypt('data', 'key', 'invalid-algo') IS NULL
0
# Test decrypt with NULL data
SELECT vsql_crypto.decrypt(NULL, 'key', 'aes') IS NULL;
vsql_crypto.decrypt(NULL, 'key', 'aes') IS NULL
1
# Test decrypt with NULL key
SELECT vsql_crypto.decrypt('data', NULL, 'aes') IS NULL;
vsql_crypto.decrypt('data', NULL, 'aes') IS NULL
1
# Test decrypt with NULL algorithm
SELECT vsql_crypto.decrypt('data', 'key', NULL) IS NULL;
vsql_crypto.decrypt('data', 'key', NULL) IS NULL
1
# Test decrypt with wrong key
SET @data = 'Hello, World!';
SET @key1 = 'correct-key-16!!';
SET @key2 = 'wrong-key-16!!!!';
SET @enc = vsql_crypto.encrypt(@data, @key1, 'aes');
SELECT vsql_crypto.decrypt(@enc, @key2, 'aes') = @data;
vsql_crypto.decrypt(@enc, @key2, 'aes') = @data
NULL
# Test decrypt with corrupted data
SELECT vsql_crypto.decrypt('corrupted-data', 'key', 'aes') IS NULL;
vsql_crypto.decrypt('corrupted-data', 'key', 'aes') IS NULL
0
# Test decrypt with too short data
SELECT vsql_crypto.decrypt('abc', 'key', 'aes') IS NULL;
vsql_crypto.decrypt('abc', 'key', 'aes') IS NULL
0
# Test gen_random_bytes with zero
SELECT vsql_crypto.gen_random_bytes(0) IS NULL;
vsql_crypto.gen_random_bytes(0) IS NULL
0
# Test gen_random_bytes with negative number
SELECT vsql_crypto.gen_random_bytes(-1) IS NULL;
vsql_crypto.gen_random_bytes(-1) IS NULL
0
# Test gen_random_bytes with very large number (should fail or return NULL)
SELECT vsql_crypto.gen_random_bytes(1073741824) IS NULL;
vsql_crypto.gen_random_bytes(1073741824) IS NULL
0
# Test gen_random_bytes with NULL
SELECT vsql_crypto.gen_random_bytes(NULL) IS NULL;
vsql_crypto.gen_random_bytes(NULL) IS NULL
1
# Test decrypt of data encrypted with different algorithm
SET @data = 'test data';
SET @key = 'sixteen-byte-key';
SET @enc_aes = vsql_crypto.encrypt(@data, @key, 'aes');
SELECT vsql_crypto.decrypt(@enc_aes, @key, 'aes-256') = @data;
vsql_crypto.decrypt(@enc_aes, @key, 'aes-256') = @data
1
# Test AES-256 requires longer key
SET @short_key = 'short';
SET @data = 'test';
SET @enc = vsql_crypto.encrypt(@data, @short_key, 'aes-256');
SELECT @enc IS NOT NULL;
@enc IS NOT NULL
1
# Test case sensitivity of algorithm names
SELECT HEX(vsql_crypto.digest('test', 'SHA256')) = HEX(vsql_crypto.digest('test', 'sha256'));
HEX(vsql_crypto.digest('test', 'SHA256')) = HEX(vsql_crypto.digest('test', 'sha256'))
1
# Test mixed case algorithm names
SELECT HEX(vsql_crypto.digest('test', 'Sha256'));
HEX(vsql_crypto.digest('test', 'Sha256'))
9F86D081884C7D659A2FEAA0C55AD015A3BF4F1B2B0B822CD15D6C15B0F00A08
